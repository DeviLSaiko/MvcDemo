@model OrdersProject.Orders


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
        <h5>Create New Order</h5>
    <div class="row">

        <div class="col-md-4">
            <div class="form-group">
                @Html.LabelFor(model => model.ClientName, htmlAttributes: new { @class = "control-label col-md-4" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.ClientName, new { htmlAttributes = new { @class = "form-control shadow-none" } })

                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">

                @Html.LabelFor(model => model.OrderType, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("OrderType", new List<SelectListItem>
       {
           new SelectListItem{Text="Sweater" , Value="Sweater" } ,
           new SelectListItem { Text="T-shirt" , Value="T-shirt" },
            new SelectListItem{Text="Shorts" , Value="Shorts" } ,
           new SelectListItem { Text="Leather jackets" , Value="Leather jackets" }

       }, "Select", new { @class = "form-select shadow-none col-md-2" })

                </div>
            </div>

        </div>
        <div class="col-md-4">
            <div class="form-group">
                @Html.LabelFor(model => model.Qty, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Qty, new { htmlAttributes = new { @class = " shadow-none form-control" } })
                </div>
            </div>
        </div>


    </div>

    <div class="row mt-3">
        <div class="col-md-4">
            <div class="form-group">
                @Html.LabelFor(model => model.ETA_Time, htmlAttributes: new { @class = "control-label col-md-2" })

                @Html.EditorFor(model => model.ETA_Time, new { htmlAttributes = new { @class = "form-control shadow-none" } })

            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                @Html.LabelFor(model => model.Status, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Status, new { htmlAttributes = new { @class = "form-control shadow-none" } })
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <button type="submit" value="Create" class="btn btn-primary mt-4">Create New Order</button>
        </div>
    </div>

            @Html.ValidationSummary("", new { @class = "text-danger" })

}

<div>
    @Html.ActionLink("Back to List", "OrdersList")
</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
